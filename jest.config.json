{
  "collectCoverageFrom": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/src/example",
    "<rootDir>/src/index"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest",
    "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.js"
  ]
}
